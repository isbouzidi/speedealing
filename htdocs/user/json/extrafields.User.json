{
	"_id": "extrafields:User",
	"class": "extrafields",
	"ico": "icon-object-user",
	"schemaMongoose": {
		"enabled": true,
		"name": "user",
		"collection": "User",
		"plugins": ["mongoose-timestamp"]
	},
	"langs": [
		"users",
		"admin"
	],
	"fields": {
		"_id": {
			"schema": "String",
			"type": "text",
			"enable": true,
			"list": {
				"visible": false,
				"static": true
			}
		},
		"Status": {
			"schema": "Mixed",
			"type": "select",
			"enable": true,
			"default": "DISABLE",
			"status": true,
			"aoColumns": {
				"sClass": "center",
				"bSearchable": true,
				"bVisible": true
			},
			"values": {
				"DISABLE": {
					"enable": true,
					"label": "Bloqu√©",
					"cssClass": "red-gradient"
				},
				"ENABLE": {
					"enable": true,
					"label": "Actif",
					"cssClass": "green-gradient"
				},
				"NOCONNECT": {
					"enable": true,
					"label": "Actif/Sans conex.",
					"cssClass": "blue-gradient"
				}
			}
		},
		"email": {
			"schema": "String"
		},
		"admin": {
			"schema": "Boolean"
		},
		"lastname": {
			"schema": "String"
		},
		"firstname": {
			"schema": "String"
		},
		"password": {
			"schema": "String"
		},
		"name": {
			"schema": {"type": "String", "require": true}
		},
		"roles": {
			"schema": ["String"]
		},
		"email": {
			"_createdAt": {"type": "Date", "default": "Date.now()"}
		},
		"LastConnection": {
			"schema": "Date"
		},
		"NewConnection": {
			"schema": "Date"
		}
	}
}